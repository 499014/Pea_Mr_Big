<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/RelativeLayout_xxx"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    >
    <ImageView
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:layout_marginRight="8dp"
        android:id="@+id/post_thumbnail"
        android:src="@mipmap/iconxx"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_above="@+id/name" />

    <TextView
        android:id="@+id/pea"
        android:layout_toRightOf="@+id/post_thumbnail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Pea"
        android:textColor="@android:color/black"
        android:textSize="21sp"
        android:textStyle="bold"
  />
    <ImageView
        android:layout_width="42dp"
        android:layout_height="42dp"
        android:layout_marginRight="8dp"
        android:id="@+id/map"
        android:src="@drawable/mapicon"
        android:layout_toRightOf="@+id/pea"

        android:layout_above="@+id/name" />
    <TextView
        android:id="@+id/mru"
        android:layout_toRightOf="@+id/post_thumbnail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/pea"
        android:text="MRU"
        android:textColor="@color/color_3"
        android:textSize="19sp"
        android:textStyle="bold"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="CA "
        android:layout_below="@+id/mru"
        android:layout_alignLeft="@+id/pea"
        android:layout_alignStart="@+id/pea"
        android:textSize="18sp"
        android:textStyle="bold"
        android:id="@+id/ca"
        android:textColor="@color/color_3"
       />


        <TextView
            android:layout_below="@+id/ca"
            android:layout_alignLeft="@+id/ca"
            android:layout_alignStart="@+id/ca"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Name"
            android:textSize="18sp"
            android:textStyle="bold"
            android:id="@+id/name"
            android:textColor="@color/color_3" />




</RelativeLayout>