<?xml version="1.0" encoding="utf-8"?>


<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context="com.its.peac1.pea_mr_big.Activity_Mr_Register">


    <ScrollView
        android:id="@+id/ScrollView01"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fillViewport="true"
        android:scrollbars="horizontal"

        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="-2dp">



        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            >
            <android.support.v7.widget.SwitchCompat
                android:id="@+id/switch_voice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checked="false"
                android:text="Keyboard เสียง"

                android:textOff="ไม่เลือก"
                android:textOn="เลือก"
                android:textSize="18dp"
                android:textColor="@color/colorPrimary"

                android:textStyle="bold"
                app:showText="true" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_below="@+id/switch_voice"
                android:weightSum="1">


                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_centerHorizontal="true"
                    android:text=""
                    android:textAlignment="center"
                    android:textStyle="bold" />
                <TextView
                    android:id="@+id/txt_UserDetail"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_centerHorizontal="true"
                    android:text="1.รายละเอียดผู้ใช้ไฟ"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/etxt_Username"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_centerHorizontal="true"
                    android:paddingLeft="7dp"
                    />

                <EditText
                    android:id="@+id/etxt_Mru"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_centerHorizontal="true"
                    android:paddingLeft="7dp"
                    />

                <EditText
                    android:id="@+id/ba_name"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_centerHorizontal="true"
                    android:paddingLeft="7dp"
                    />

                <EditText
                    android:id="@+id/pea_no"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_centerHorizontal="true"
                    android:paddingLeft="7dp"
                    />
                <EditText
                    android:id="@+id/ZDMR209"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_centerHorizontal="true"
                    android:paddingLeft="7dp"
                    android:text="" />
                <RelativeLayout
                    android:layout_marginBottom="@+id/ba_name"
                    android:id="@+id/Myjob2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">


                </RelativeLayout>

                <TextView
                    android:id="@+id/txt_See_also"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_centerHorizontal="true"
                    android:text="หมายเหตุ"
                    android:textStyle="bold" />

                <Button
                    android:id="@+id/button_check"
                    android:drawableLeft="@drawable/check"
                    android:layout_height="wrap_content"
                    android:layout_width="177dp"
                    android:text="ตรวจสอบข้อมูล"
                    android:layout_weight="0.48" />


                <Button
                    android:id="@+id/button_send"
                    android:layout_width="173dp"

                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/save"
                    android:text="ส่งข้อมูล"
                    android:layout_weight="0.52"
                    android:layout_marginBottom="150dp" />


            </LinearLayout>



        </RelativeLayout>
    </ScrollView>

</android.support.constraint.ConstraintLayout>
