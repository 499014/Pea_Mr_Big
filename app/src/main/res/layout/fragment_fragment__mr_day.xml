<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.its.peac1.pea_mr_big.Fragment_Mr_day">

    <!-- TODO: Update blank fragment layout -->
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        >
        <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:id="@+id/ra"
            android:layout_height="wrap_content">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Synchronize Data"
                android:textSize="16sp"
                android:id="@+id/Title_log"
                android:textColor="@android:color/black"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/imageButton_x"
                 />

            <ImageButton
                android:id="@+id/imageButton_x"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/ic_sync_black_24dp"
                android:layout_alignTop="@+id/Title_log"
                android:layout_alignParentStart="true" />


        </RelativeLayout>
        <TextView
            android:id="@+id/textTitle1"
            android:layout_below="@+id/ra"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="รายการทั้งหมด"
            android:textColor="?attr/colorAccent"
            android:textSize="30sp"
            android:textStyle="bold" />






    <LinearLayout
        android:id="@+id/linearlayout1"
        android:layout_below="@+id/textTitle1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#37333e"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:text="วันที่ตามแผน"
            android:textSize="20dp"
            android:textColor="#ffffff"
            android:layout_weight="2.02" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2.8"
            android:gravity="left"

            android:text="ทั้งหมด"
            android:textSize="20dp"
            android:textColor="#ffffff" />

        <TextView

            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2.8"
            android:gravity="left"
            android:textSize="20dp"
            android:text="อ่านเเล้ว"
            android:textColor="#ffffff" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2.8"
            android:gravity="left"
            android:textSize="20dp"

            android:text="คงเหลือ"
            android:textColor="#ffffff" />




    </LinearLayout>
        <ListView
            android:id="@+id/listview1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/linearlayout1"
            android:divider="#95a5ff"
            android:dividerHeight="1dp"
            android:layout_alignParentStart="true" />
    </RelativeLayout>

</FrameLayout>
